from fastapi import FastAPI
from fastapi.middleware.cors import CORSMiddleware

app = FastAPI()

app.add_middleware(
    CORSMiddleware,
    allow_origins=["*"],  # 将来的に制限する
    allow_credentials=True,
    allow_methods=["*"],
    allow_headers=["*"],
)

@app.get("/api/reviews")
def get_reviews():
    return [
        {"name": "John", "rating": 5, "comment": "Great!"},
        {"name": "Emma", "rating": 4, "comment": "Good, but can improve."}
    ]
